.container {
  width: 100vw;
  height: 100vh;
  background: #101018;
  position: relative;
  overflow: hidden;
}
.hud {
  position: absolute;
  top: 0; left: 0; right: 0; bottom: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: rgba(0,0,0,0.5);
  color: #fff;
  z-index: 10;
}
.title { font-size: 40rpx; margin-bottom: 24rpx; }
.subtitle { font-size: 28rpx; margin-bottom: 32rpx; color: #cfd3dc; }
.btn { margin: 12rpx 0; }
.scoreTop {
  position: absolute;
  top: 24rpx; left: 24rpx;
  color: #fff;
  font-size: 36rpx;
  z-index: 5;
}
.score {
  margin-top: 16rpx;
  font-size: 32rpx;
}
